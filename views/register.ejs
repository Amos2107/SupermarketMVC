<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
  .auth-hero {
    min-height: calc(100vh - 120px);
    background: radial-gradient(circle at 12% 18%, rgba(26, 166, 160, 0.14), transparent 30%),
                radial-gradient(circle at 88% 0%, rgba(255, 179, 71, 0.18), transparent 34%),
                linear-gradient(135deg, #5fa8ff, #8fd3ff);
    display: flex;
    align-items: center;
    color: var(--text);
    padding: 32px 0;
  }
  .auth-card {
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 20px 50px rgba(13, 71, 161, 0.18);
    color: var(--text);
    overflow: hidden;
  }
  .auth-side {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.82), rgba(255, 255, 255, 0.9));
    color: var(--text);
  }
  .auth-card a { color: var(--text); }
  .auth-side a { color: var(--text); }
  .auth-form .form-control {
    border-radius: 10px;
    padding: 8px 12px;
    border: 1px solid #d6e3e7;
    background: #fff;
    color: var(--text);
    box-shadow: none;
    width: 100%;
  }
  .auth-form .form-control::placeholder { color: #5b6a72; }
  .auth-form .form-control:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(26, 166, 160, 0.15);
  }
  .auth-illustration {
    background: radial-gradient(circle at 25% 20%, rgba(13, 71, 161, 0.08), transparent 38%),
                radial-gradient(circle at 80% 40%, rgba(26, 166, 160, 0.12), transparent 34%),
                rgba(255, 255, 255, 0.8);
    border-radius: 14px;
    box-shadow: 0 14px 32px rgba(13, 71, 161, 0.12);
    padding: 12px;
    min-height: 260px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .auth-illustration img {
    width: 100%;
    height: 100%;
    border-radius: 10px;
    object-fit: cover;
  }
</style>

<div class="auth-hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="auth-card">
          <div class="row g-0">
            <div class="col-md-5 auth-side p-4 d-flex flex-column justify-content-center gap-4">
              <div>
                <p class="mb-1 text-uppercase small opacity-75">Create account</p>
                <h3 class="fw-bold">Join AmosMart</h3>
                <p class="small opacity-75">Shop seamlessly and track your orders in one place.</p>
              </div>
              <div class="auth-illustration">
                <img src="/images/supermarket(1).jpg" alt="Grocery aisles at AmosMart" loading="lazy">
              </div>
            </div>

            <div class="col-md-7 p-4">
              <h5 class="fw-semibold mb-3 text-primary text-center">Registeration</h5>

              <% if (messages && messages.length > 0) { %>
                <div class="alert alert-danger">
                  <% messages.forEach(function(message) { %>
                    <p class="mb-0"><%= message %></p>
                  <% }); %>
                </div>
              <% } %>

              <form action="/register" method="POST" class="mt-3 auth-form">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    id="username"
                    name="username"
                    class="form-control"
                    required
                    value="<%= formData && formData.username ? formData.username : '' %>"
                  >
                </div>

                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    required
                    placeholder="you@example.com"
                    value="<%= formData && formData.email ? formData.email : '' %>"
                  >
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" required placeholder="At least 8 characters">
                </div>

                <div class="mb-3">
                  <label for="address" class="form-label">Address</label>
                  <input
                    type="text"
                    id="address"
                    name="address"
                    class="form-control"
                    required
                    value="<%= formData && formData.address ? formData.address : '' %>"
                  >
                </div>

                <div class="mb-4">
                  <label for="contact" class="form-label">Contact Number</label>
                  <input
                    type="text"
                    id="contact"
                    name="contact"
                    class="form-control"
                    required
                    value="<%= formData && formData.contact ? formData.contact : '' %>"
                  >
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Register</button>
              </form>

              <p class="text-center mt-3 mb-0">
                Already have an account? <a href="/login">Login</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
