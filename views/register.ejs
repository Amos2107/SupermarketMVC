<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
  .auth-hero {
    min-height: calc(100vh - 120px);
    background: radial-gradient(circle at 10% 20%, rgba(13, 71, 161, 0.15), transparent 25%),
                radial-gradient(circle at 90% 0%, rgba(255, 214, 102, 0.25), transparent 30%),
                linear-gradient(135deg, #0d47a1, #0f6fde);
    display: flex;
    align-items: center;
    color: #fff;
    padding: 32px 0;
  }
  .auth-card {
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 20px 50px rgba(13, 71, 161, 0.18);
    overflow: hidden;
  }
  .auth-side {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    color: #fff;
  }
</style>

<div class="auth-hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="auth-card">
          <div class="row g-0">
            <div class="col-md-5 auth-side p-4 d-flex flex-column justify-content-between">
              <div>
                <p class="mb-1 text-uppercase small opacity-75">Create account</p>
                <h3 class="fw-bold">Join AmosMart</h3>
                <p class="small opacity-75">Shop seamlessly and track your orders in one place.</p>
              </div>
              <div class="text-white-50 small">
                Already have an account? <a class="text-white fw-semibold" href="/login">Login</a>
              </div>
            </div>

            <div class="col-md-7 p-4">
              <h5 class="fw-semibold mb-3 text-primary">Register</h5>

              <% if (messages && messages.length > 0) { %>
                <div class="alert alert-danger">
                  <% messages.forEach(function(message) { %>
                    <p class="mb-0"><%= message %></p>
                  <% }); %>
                </div>
              <% } %>

              <form action="/register" method="POST" class="mt-3">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    id="username"
                    name="username"
                    class="form-control"
                    required
                    value="<%= formData && formData.username ? formData.username : '' %>"
                  >
                </div>

                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    required
                    value="<%= formData && formData.email ? formData.email : '' %>"
                  >
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" required placeholder="••••••••">
                </div>

                <div class="mb-3">
                  <label for="address" class="form-label">Address</label>
                  <input
                    type="text"
                    id="address"
                    name="address"
                    class="form-control"
                    required
                    value="<%= formData && formData.address ? formData.address : '' %>"
                  >
                </div>

                <div class="mb-4">
                  <label for="contact" class="form-label">Contact Number</label>
                  <input
                    type="text"
                    id="contact"
                    name="contact"
                    class="form-control"
                    required
                    value="<%= formData && formData.contact ? formData.contact : '' %>"
                  >
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Register</button>
              </form>

              <p class="text-center mt-3 mb-0">
                Already have an account? <a href="/login">Login</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
