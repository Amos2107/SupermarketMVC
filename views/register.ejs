<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="auth-hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="auth-card">
          <div class="row g-0">
            <div class="col-md-5 auth-side p-4 d-flex flex-column justify-content-center gap-4">
              <div>
                <p class="mb-1 text-uppercase small opacity-75">Create account</p>
                <h3 class="fw-bold">Join AmosMart</h3>
                <p class="small opacity-75">Shop seamlessly and track your orders in one place.</p>
              </div>
              <div class="auth-illustration">
                <img src="/images/supermarket(1).jpg" alt="Grocery aisles at AmosMart" loading="lazy">
              </div>
            </div>

            <div class="col-md-7 p-4 fade-up">
              <h5 class="fw-semibold mb-3 text-primary text-center">Registration</h5>

              <% if (messages && messages.length > 0) { %>
                <div class="alert alert-danger">
                  <% messages.forEach(function(message) { %>
                    <p class="mb-0"><%= message %></p>
                  <% }); %>
                </div>
              <% } %>

              <form action="/register" method="POST" class="mt-3 auth-form">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    id="username"
                    name="username"
                    class="form-control"
                    required
                    value="<%= formData && formData.username ? formData.username : '' %>"
                  >
                  <small class="text-muted">This will be shown in the navbar.</small>
                </div>

                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    required
                    placeholder="you@example.com"
                    value="<%= formData && formData.email ? formData.email : '' %>"
                  >
                  <small class="text-muted">Weâ€™ll use this to send order updates.</small>
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" required placeholder="At least 8 characters" minlength="8">
                  <small class="text-muted">At least 8 characters; add a number for extra strength.</small>
                </div>

                <div class="mb-3">
                  <label for="address" class="form-label">Address</label>
                  <input
                    type="text"
                    id="address"
                    name="address"
                    class="form-control"
                    required
                    value="<%= formData && formData.address ? formData.address : '' %>"
                  >
                  <small class="text-muted">For delivery and receipts.</small>
                </div>

                <div class="mb-4">
                  <label for="contact" class="form-label">Contact Number</label>
                  <input
                    type="text"
                    id="contact"
                    name="contact"
                    class="form-control"
                    required
                    value="<%= formData && formData.contact ? formData.contact : '' %>"
                  >
                  <small class="text-muted">Include country code if outside SG.</small>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Register</button>
              </form>

              <p class="text-center mt-3 mb-0">
                Already have an account? <a href="/login">Login</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
