<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
  <p class="mt-2">Welcome, <strong><%= user.username %></strong> (<%= user.role %>)</p>

  <div class="text-center mt-3 mb-4">
    <h2>Shop Products</h2>
  </div>

  <div class="table-responsive">
    <table class="table table-hover table-bordered align-middle text-center bg-white shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>Product Name</th>
          <th>Image</th>
          <th>Available</th>
          <th>Price ($)</th>
          <th>Quantity</th>
          <th>Buy</th>
        </tr>
      </thead>
      <tbody>
        <% if (products && products.length > 0) { %>
          <% products.forEach(p => { %>
            <tr>
              <td>
                <a href="/product/<%= p.id %>"><%= p.productName %></a>
              </td>
              <td>
                <img src="/images/<%= p.image %>" alt="<%= p.productName %>" class="img-thumbnail" style="max-width: 80px;">
              </td>
              <td><%= p.quantity %></td>
              <td>$<%= p.price.toFixed(2) %></td>
              <td style="width: 120px;">
                <select class="form-select"
                        onchange="document.getElementById('quantity-<%= p.id %>').value = this.value">
                  <% for (let q = 1; q <= 5; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
              </td>
              <td style="width: 130px;">
                <form action="/add-to-cart/<%= p.id %>" method="POST">
                  <input type="hidden" name="quantity" id="quantity-<%= p.id %>" value="1">
                  <button type="submit" class="btn btn-primary btn-sm mt-1">Add to Cart</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-muted">No products available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>
