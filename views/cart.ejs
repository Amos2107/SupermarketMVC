<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <h2 class="mb-0">Your Cart</h2>
    <a href="/shopping" class="btn btn-outline-secondary btn-sm">Back to Shopping</a>
  </div>

  <% if (cart.length === 0) { %>
    <div class="alert alert-info">Your cart is empty.</div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-bordered align-middle bg-white shadow-sm">
        <thead class="table-dark text-center">
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price ($)</th>
            <th>Quantity</th>
            <th>Subtotal ($)</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% cart.forEach(item => { %>
            <% const subtotal = item.price * item.quantity; %>
            <% total += subtotal; %>
            <tr class="text-center">
              <td><%= item.productName %></td>
              <td>
                <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="img-thumbnail" style="max-width: 80px;">
              </td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td><%= item.quantity %></td>
              <td>$<%= subtotal.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
      <h4 class="mb-0">Total: $<%= total.toFixed(2) %></h4>
      <!-- If you ever add checkout, button goes here -->
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
