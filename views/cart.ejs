<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container py-4">

  <h2 class="mb-4">Your Cart</h2>

  <a href="/shopping" class="btn btn-outline-secondary mb-3">Back to Shopping</a>

  <% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>

  <div class="table-responsive">
    <table class="table table-bordered align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th>Product</th>
          <th>Image</th>
          <th>Price ($)</th>
          <th>Quantity</th>
          <th>Subtotal ($)</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% let total = 0; %>
        <% cart.forEach(item => { %>
          <% total += item.priceAtTime * item.quantity; %>
          <tr class="text-center">
            <td><%= item.productName %></td>
            <td>
              <img src="/images/<%= item.image %>" class="img-thumbnail" style="max-width: 80px;">
            </td>
            <td>$<%= Number(item.priceAtTime).toFixed(2) %></td>
            <td>
              <form action="/cart/update/<%= item.cartItemId %>" method="POST" class="d-flex justify-content-center gap-1">
                <select name="quantity" class="form-select w-auto">
                  <% for (let q = 1; q <= 10; q++) { %>
                    <option value="<%= q %>" <%= item.quantity === q ? "selected" : "" %>><%= q %></option>
                  <% } %>
                </select>
                <button class="btn btn-primary btn-sm">Update</button>
              </form>
            </td>
            <td>$<%= (item.priceAtTime * item.quantity).toFixed(2) %></td>
            <td>
              <form action="/cart/delete/<%= item.cartItemId %>" method="POST">
                <button class="btn btn-danger btn-sm">ðŸ—‘ Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-between align-items-center mt-3">
    <h4 class="mb-0">Total: $<%= total.toFixed(2) %></h4>

    <div class="d-flex gap-2">
      <form action="/cart/clear" method="GET">
        <button type="submit" class="btn btn-outline-danger">Clear Cart</button>
      </form>

      <form action="/checkout" method="POST">
        <button type="submit" class="btn btn-success">Checkout</button>
      </form>
    </div>
  </div>

  <% } %>

</div>

<%- include('partials/footer') %>
