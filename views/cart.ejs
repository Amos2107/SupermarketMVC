<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container py-4">

  <h2 class="mb-4">Your Cart</h2>

  <a href="/shopping" class="btn btn-outline-secondary mb-3">Back to Shopping</a>

  <% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>

  <div class="table-responsive">
    <table class="table table-bordered align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th>Product</th>
          <th>Image</th>
          <th>Price ($)</th>
          <th>Quantity</th>
          <th>Subtotal ($)</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% cart.forEach(item => { %>
          <tr class="text-center">
            
            <!-- Product Name -->
            <td><%= item.productName %></td>

            <!-- Image -->
            <td>
              <img src="/images/<%= item.image %>" class="img-thumbnail" style="max-width: 80px;">
            </td>

            <!-- Price -->
            <td>$<%= Number(item.price).toFixed(2) %></td>

            <!-- Quantity Selector + Update Button -->
            <td>
              <form action="/cart/update/<%= item.id %>" method="POST" class="d-flex justify-content-center gap-1">
                <select name="quantity" class="form-select w-auto">
                  <% for (let q = 1; q <= 10; q++) { %>
                    <option value="<%= q %>" <%= item.quantity === q ? "selected" : "" %>>
                      <%= q %>
                    </option>
                  <% } %>
                </select>
                <button class="btn btn-primary btn-sm">Update</button>
              </form>
            </td>

            <!-- Subtotal -->
            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>

            <!-- Delete Button -->
            <td>
              <form action="/cart/delete/<%= item.id %>" method="POST">
                <button class="btn btn-danger btn-sm">ðŸ—‘ Delete</button>
              </form>
            </td>

          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <h4 class="mt-3">Total: 
    $<%= cart.reduce((sum, item) => sum + item.price * item.quantity, 0).toFixed(2) %>
  </h4>

  <% } %>

</div>

<%- include('partials/footer') %>
