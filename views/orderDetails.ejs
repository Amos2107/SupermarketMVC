<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container py-4">
  <h2 class="mb-4">Order #<%= order.id %></h2>

  <p><strong>Date:</strong> <%= order.created_at.toDateString() %></p>
  <p><strong>Total:</strong> $<%= Number(order.totalAmount).toFixed(2) %></p>

  <h4 class="mt-4">Items</h4>

  <table class="table table-bordered text-center">
    <thead class="table-secondary">
      <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Qty</th>
        <th>Price ($)</th>
        <th>Subtotal ($)</th>
      </tr>
    </thead>

    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.productName %></td>
          <td>
            <img src="/images/<%= item.image %>" style="max-width:70px;">
          </td>
          <td><%= item.quantity %></td>
          <td>$<%= Number(item.priceAtTime).toFixed(2) %></td>
          <td>$<%= (item.priceAtTime * item.quantity).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/orders" class="btn btn-secondary">Back</a>
</div>

<%- include('partials/footer') %>
