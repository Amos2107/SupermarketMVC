<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
  .hero-bg {
    background: radial-gradient(circle at 20% 20%, rgba(13, 71, 161, 0.18), transparent 25%),
                radial-gradient(circle at 80% 0%, rgba(255, 214, 102, 0.25), transparent 25%),
                linear-gradient(135deg, #0d47a1, #0f6fde);
    color: #fff;
    border-radius: 24px;
    padding: 48px 36px;
    position: relative;
    overflow: hidden;
  }
  .hero-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 80% 80%, rgba(255,255,255,0.08), transparent 45%);
    pointer-events: none;
  }
  .glass-card {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 15px 40px rgba(13, 71, 161, 0.15);
    border-radius: 18px;
  }
  .feature-pill {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 999px;
    padding: 6px 12px;
    font-size: 0.9rem;
    margin-right: 8px;
  }
</style>

<div class="container my-5">
  <div class="hero-bg mb-5">
    <div class="row align-items-center">
      <div class="col-lg-7">
        <div class="d-flex align-items-center mb-3">
          <span class="feature-pill">Fast checkout</span>
          <span class="feature-pill">Fresh picks daily</span>
          <span class="feature-pill">Secure payments</span>
        </div>
        <h1 class="display-5 fw-bold">Welcome to AmosMart</h1>
        <p class="lead mb-4">Shop smarter, manage inventory faster, and keep every basket moving.</p>

        <% if (user) { %>
          <% if (user.role === 'admin') { %>
            <div class="d-flex flex-wrap gap-2">
              <a href="/inventory" class="btn btn-light text-primary fw-semibold px-4">Go to Inventory</a>
              <a href="/admin/inventory-health" class="btn btn-outline-light fw-semibold px-4">Inventory Health</a>
            </div>
          <% } else { %>
            <div class="d-flex flex-wrap gap-2">
              <a href="/shopping" class="btn btn-light text-primary fw-semibold px-4">Start Shopping</a>
              <a href="/cart" class="btn btn-outline-light fw-semibold px-4">View Cart</a>
            </div>
          <% } %>
        <% } else { %>
          <div class="d-flex flex-wrap gap-2">
            <a href="/login" class="btn btn-light text-primary fw-semibold px-4">Login</a>
            <a href="/register" class="btn btn-outline-light fw-semibold px-4">Register</a>
          </div>
        <% } %>
      </div>
      <div class="col-lg-5 mt-4 mt-lg-0">
        <div class="glass-card p-4">
          <h5 class="fw-semibold mb-3 text-primary">Why AmosMart?</h5>
          <ul class="list-unstyled mb-0">
            <li class="mb-2 d-flex align-items-center">
              <span class="badge bg-primary me-2">1</span>
              Curated products with clear stock levels.
            </li>
            <li class="mb-2 d-flex align-items-center">
              <span class="badge bg-primary me-2">2</span>
              Smooth cart â†’ checkout flow with instant flash feedback.
            </li>
            <li class="d-flex align-items-center">
              <span class="badge bg-primary me-2">3</span>
              Admin controls for inventory, orders, and users in one place.
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-md-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body">
          <h5 class="fw-semibold">Fast shopping</h5>
          <p class="text-muted mb-0">Browse, add to cart, and checkout in a few clicks. Your picks stay synced while you explore.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body">
          <h5 class="fw-semibold">Smart inventory</h5>
          <p class="text-muted mb-0">Admins get clear stock views, top sellers, and quick links to restock.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body">
          <h5 class="fw-semibold">Secure sessions</h5>
          <p class="text-muted mb-0">Stay signed in safely, with feedback on every action via toasts and alerts.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
