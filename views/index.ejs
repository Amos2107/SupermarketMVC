<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm border-0">
        <div class="card-body text-center py-4">
          <h1 class="mb-3">Welcome to <span class="text-primary">AmosMart</span></h1>

          <% if (user) { %>
            <% if (user.role === 'admin') { %>
              <p class="lead mb-4">Manage your inventory and products with ease.</p>
              <a href="/inventory" class="btn btn-primary me-2">Go to Inventory</a>
            <% } else { %>
              <p class="lead mb-4">Continue shopping for your favourite items.</p>
              <a href="/shopping" class="btn btn-primary me-2">Start Shopping</a>
              <a href="/cart" class="btn btn-outline-secondary">View Cart</a>
            <% } %>
          <% } else { %>
            <p class="lead mb-4">
              Please login or register to start shopping with AmosMart.
            </p>
            <a href="/login" class="btn btn-primary me-2">Login</a>
            <a href="/register" class="btn btn-outline-secondary">Register</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
