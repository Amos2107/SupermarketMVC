<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
  .inventory-hero {
    background: linear-gradient(135deg, #0d47a1, #0f6fde);
    color: #fff;
    border-radius: 16px;
    padding: 22px;
    box-shadow: 0 12px 28px rgba(13, 71, 161, 0.18);
  }
</style>

<div class="container py-4">
  <div class="inventory-hero d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
      <p class="mb-1 text-uppercase small opacity-75">Inventory</p>
      <h3 class="fw-bold mb-0">Hello, <%= user.username %> (<%= user.role %>)</h3>
    </div>
    <a href="/addProduct" class="btn btn-light text-primary fw-semibold">+ Add Product</a>
  </div>

  <div class="table-responsive">
    <table class="table align-middle bg-white shadow-sm">
      <thead class="table-light text-center">
        <tr>
          <th>Product</th>
          <th>Image</th>
          <th>Quantity</th>
          <th>Price ($)</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% if (products && products.length > 0) { %>
          <% products.forEach(p => { %>
            <tr class="text-center">
              <td><a href="/product/<%= p.id %>" class="fw-semibold"><%= p.productName %></a></td>
              <td><img src="/images/<%= p.image %>" alt="<%= p.productName %>" class="img-thumbnail" style="max-width: 70px;"></td>
              <td>
                <span class="badge <%= p.quantity <= 5 ? 'bg-danger' : 'bg-success' %>"><%= p.quantity %></span>
              </td>
              <td>$<%= p.price.toFixed(2) %></td>
              <td><a href="/updateProduct/<%= p.id %>" class="btn btn-sm btn-outline-primary">Edit</a></td>
              <td>
                <a href="/deleteProduct/<%= p.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="6" class="text-muted text-center">No products found.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>
