<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
  .inventory-hero {
    background: linear-gradient(135deg, #0d47a1, #0f6fde);
    color: #fff;
    border-radius: 16px;
    padding: 22px;
    box-shadow: 0 12px 28px rgba(13, 71, 161, 0.18);
  }
</style>

<div class="container py-4">
  <div class="breadcrumb-bar mb-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Inventory</li>
      </ol>
    </nav>
  </div>

  <div class="inventory-hero d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
      <p class="mb-1 text-uppercase small opacity-75">Inventory</p>
      <h3 class="fw-bold mb-0">Hello, <%= user.username %> (<%= user.role %>)</h3>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/inventory-health" class="btn btn-outline-light">Full Health Page</a>
      <a href="/addProduct" class="btn btn-light text-primary fw-semibold">+ Add Product</a>
    </div>
  </div>

  <ul class="nav nav-tabs" id="inventoryTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="list-tab" data-bs-toggle="tab" data-bs-target="#list-pane" type="button" role="tab">Inventory</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="health-tab" data-bs-toggle="tab" data-bs-target="#health-pane" type="button" role="tab">Inventory Health</button>
    </li>
  </ul>

  <div class="tab-content pt-3">
    <div class="tab-pane fade show active" id="list-pane" role="tabpanel">
      <div class="table-responsive">
        <table class="table table-sticky align-middle bg-white shadow-sm">
          <thead class="table-light text-center">
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th>Quantity</th>
              <th>Price ($)</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% if (products && products.length > 0) { %>
              <% products.forEach(p => { %>
                <tr class="text-center">
                  <td><a href="/product/<%= p.id %>" class="fw-semibold"><%= p.productName %></a></td>
                  <td><img src="/images/<%= p.image %>" alt="<%= p.productName %>" class="img-thumbnail" style="max-width: 70px;"></td>
                  <td>
                    <span class="badge <%= p.quantity <= 5 ? 'bg-danger' : 'bg-success' %>"><%= p.quantity %></span>
                  </td>
                  <td>$<%= Number(p.price).toFixed(2) %></td>
                  <td><a href="/updateProduct/<%= p.id %>" class="btn btn-sm btn-outline-primary">Edit</a></td>
                  <td>
                    <a href="/deleteProduct/<%= p.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="6" class="text-muted text-center">No products found.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="tab-pane fade" id="health-pane" role="tabpanel">
      <div class="row g-4">
        <div class="col-lg-6">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-warning bg-opacity-25"><strong>Low Stock (<= 10)</strong></div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table mb-0 align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Name</th>
                      <th>Quantity</th>
                      <th class="text-end">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!lowStock || lowStock.length === 0) { %>
                      <tr><td colspan="3" class="text-center text-muted py-3">No low-stock items.</td></tr>
                    <% } else { %>
                      <% lowStock.forEach(function(item) { %>
                        <tr>
                          <td><%= item.productName %></td>
                          <td><span class="badge bg-warning text-dark"><%= item.quantity %></span></td>
                          <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="/updateProduct/<%= item.id %>">Update</a>
                          </td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-success bg-opacity-25"><strong>Top Selling</strong></div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table mb-0 align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Name</th>
                      <th>Sold</th>
                      <th class="text-end">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!topSelling || topSelling.length === 0) { %>
                      <tr><td colspan="3" class="text-center text-muted py-3">No sales data yet.</td></tr>
                    <% } else { %>
                      <% topSelling.forEach(function(item) { %>
                        <tr>
                          <td><%= item.productName %></td>
                          <td><span class="badge bg-success"><%= item.sold %></span></td>
                          <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="/updateProduct/<%= item.id %>">Update</a>
                          </td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row g-4 mt-3">
        <div class="col-12">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-success bg-opacity-25"><strong>Top Sellers</strong></div>
            <div class="card-body">
              <canvas id="topSellingChart" height="220"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  (function() {
    const topSellingData = <%- JSON.stringify(topSelling || []) %>;

    const topLabels = topSellingData.map(i => i.productName);
    const topSold = topSellingData.map(i => Number(i.sold || 0));

    if (document.getElementById('topSellingChart')) {
      new Chart(document.getElementById('topSellingChart'), {
        type: 'bar',
        data: {
          labels: topLabels,
          datasets: [
            {
              label: 'Sold',
              data: topSold,
              backgroundColor: 'rgba(13, 110, 253, 0.7)',
              borderColor: 'rgba(13, 110, 253, 1)',
              borderWidth: 1
            }
          ]
        },
        options: {
          plugins: { legend: { position: 'top' } },
          scales: {
            y: { beginAtZero: true, ticks: { precision: 0 } },
            x: { ticks: { autoSkip: false, maxRotation: 45, minRotation: 0 } }
          }
        }
      });
    }
  })();
</script>

<%- include('partials/footer') %>
