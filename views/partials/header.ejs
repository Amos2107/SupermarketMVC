<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>AmosMart</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/styles.css" rel="stylesheet" />
</head>

<body>

<!-- âœ… Toast Container (ONLY HERE) -->
<div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 2000;">
  <% if (messages && messages.success && messages.success.length > 0) { %>
    <div class="toast text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body text-center w-100">
          <%= messages.success[0] %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% } %>

  <% if (messages && messages.error && messages.error.length > 0) { %>
    <div class="toast text-bg-danger border-0" role="alert">
      <div class="d-flex">
        <div class="toast-body text-center w-100">
          <%= messages.error[0] %>
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% } %>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll('.toast').forEach(toastEl => {
      new bootstrap.Toast(toastEl, { delay: 2500 }).show();
    });
  });
</script>
