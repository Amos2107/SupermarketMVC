<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
  .auth-hero {
    min-height: calc(100vh - 120px);
    background: radial-gradient(circle at 12% 18%, rgba(26, 166, 160, 0.14), transparent 30%),
                radial-gradient(circle at 88% 0%, rgba(255, 179, 71, 0.18), transparent 34%),
                linear-gradient(135deg, #5fa8ff, #8fd3ff);
    display: flex;
    align-items: center;
    color: var(--text);
    padding: 32px 0;
  }
  .auth-card {
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 20px 50px rgba(13, 71, 161, 0.18);
    color: var(--text);
    overflow: hidden;
  }
  .auth-side {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.82), rgba(255, 255, 255, 0.9));
    color: var(--text);
  }
  .auth-card a { color: var(--text); }
  .auth-side a { color: var(--text); }
</style>

<div class="auth-hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="auth-card">
          <div class="row g-0">
            <div class="col-md-5 auth-side p-4 d-flex flex-column justify-content-between">
              <div>
                <p class="mb-1 text-uppercase small opacity-75">Welcome back</p>
                <h3 class="fw-bold">Sign in to AmosMart</h3>
                <p class="small opacity-75">Secure access to your cart, orders, and inventory.</p>
              </div>
            </div>

            <div class="col-md-7 p-4">
              <h5 class="fw-semibold mb-3 text-primary">Login</h5>

              <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger">
                  <% errors.forEach(function(error) { %>
                    <p class="mb-0"><%= error %></p>
                  <% }); %>
                </div>
              <% } %>

              <% if (messages && messages.length > 0) { %>
                <div class="alert alert-success">
                  <% messages.forEach(function(message) { %>
                    <p class="mb-0"><%= message %></p>
                  <% }); %>
                </div>
              <% } %>

              <form action="/login" method="POST" class="mt-3">
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" id="email" name="email" class="form-control" required placeholder="you@example.com">
                </div>

                <div class="mb-4">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" required placeholder="At least 8 characters">
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Login</button>
              </form>

              <p class="text-center mt-3 mb-0">
                New here? <a href="/register">Create an account</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

