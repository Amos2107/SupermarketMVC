<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="auth-hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 fade-up">
        <div class="auth-card">
          <div class="row g-0">
            <div class="col-md-5 auth-side p-4 d-flex flex-column justify-content-between">
              <div>
                <p class="mb-1 text-uppercase small opacity-75">Welcome back</p>
                <h3 class="fw-bold">Sign in to AmosMart</h3>
                <p class="small opacity-75">Secure access to your cart, orders, and inventory.</p>
              </div>
              <div class="auth-illustration">
                <img src="/images/grocery(1).jpg" alt="Grocery aisle at AmosMart" loading="lazy">
              </div>
            </div>

            <div class="col-md-7 p-4">
              <div class="auth-form-wrap">
                <h5 class="fw-semibold mb-3 text-primary text-center">Login</h5>

                <% if (errors && errors.length > 0) { %>
                  <div class="alert alert-danger">
                    <% errors.forEach(function(error) { %>
                      <p class="mb-0"><%= error %></p>
                    <% }); %>
                  </div>
                <% } %>

                <% if (messages && messages.length > 0) { %>
                  <div class="alert alert-success d-flex gap-2 align-items-center">
                    <span class="fw-bold">âœ“</span>
                    <div>
                      <% messages.forEach(function(message) { %>
                        <p class="mb-0"><%= message %></p>
                      <% }); %>
                    </div>
                  </div>
                <% } %>

                <form action="/login" method="POST" class="mt-3 auth-form">
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required placeholder="you@example.com" aria-label="Email address">
                    <small class="text-muted">Use the email you registered with.</small>
                  </div>

                  <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required placeholder="At least 8 characters" aria-label="Password" minlength="8">
                    <small class="text-muted">Minimum 8 characters; add a number for extra strength.</small>
                  </div>

                  <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Login</button>
                </form>

                <p class="text-center mt-3 mb-0">
                  New here? <a href="/register">Create an account</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

